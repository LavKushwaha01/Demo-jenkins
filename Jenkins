pipeline {
    agent any
     environment {
            name = "lavkushwaha"
        }
     parameters{
         string(name: 'person', defaultValue: 'lavkushwaha', description: "who are you?")
         booleanParam(name: 'are you male', defaultValue: true, description: "")
         choice(name: 'city', choices: ['jaipur', 'mumbai', 'pune'], description: "")
     }
    stages {
        stage('Run a command') {
            steps {
                sh '''
                pwd
                ls
                date
                '''
            }
        }
        stage('Enviorement variable') {
             environment {
            username = "lavkushwaha"
        }
            steps {
               sh 'echo "${BUILD_ID}"'
               sh 'echo "${name}"'
               sh 'echo "${username}"'
               
            }
        }
        stage('Build') {
            steps {
                echo 'Build'
                  sh 'echo "${name}"'
                  sh 'echo "${username}"'
            }
        }
        stage('Parameter') {
            steps {
                sh 'echo "${person}"'
            }
        }
        stage('contineue ?') {
            input {
                message "Should we contineue ?"
                ok "yes we should"
            }
            steps {
                echo 'Deploy to production'
            }
        }
        stage('Deploy to prod') {
            steps {
                echo 'Deploy to production'
            }
        }
    }
        post {
            always {
                echo "i will always say hello again"
            }
            failure {
                echo "failure"
            }
            success {
                echo "succesfull"
            }
        }
}
